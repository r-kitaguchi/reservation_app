<main>
  <%= render "devise/shared/error_messages", resource: @room%>
  <h2>ルーム登録</h2>
  <%= form_with model: @room, local: true do |f|%>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <table>
    <tr>
      <th>ルーム名</th>
      <td><%= f.text_field :name, placeholder: "ルーム名を登録", class: "form_field" %></td>
    </tr>
    <tr>
      <th>ルーム紹介</th>
      <td><%= f.text_area :introduction, placeholder: "ルーム説明を入力", class: "form_area" %></td>
    </tr>
    <tr>
      <th>料金</th>
      <td><%= f.text_field :price, placeholder: "一日あたりの料金を入力", class: "form_field" %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address, placeholder: "住所を入力", class: "form_field" %></td>
    </tr>
    <tr>
      <th>ルーム画像</th>
      <td><%= f.file_field :image %></td>
    </tr>
  </table>
  <p><%= f.submit "登録", class: "submit_but"%></p>
  <% end %>
</main>
