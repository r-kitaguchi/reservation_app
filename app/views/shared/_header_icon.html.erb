<% if user_signed_in? %>
  <ul>
    <li><%= current_user.name %></li>
    <li>
      <% if current_user.image? %>
        <%= image_tag current_user.image.to_s, class: "user_top_icon" %>
      <% else %>
        <%= image_tag 'default.png', class: "user_top_icon" %>
      <% end %>
    </li>
  </ul>
<% else %>
  <ul>
    <li><%= link_to "新規登録", new_user_registration_path, class: "header_but" %></li>
    <li><%= link_to "ログイン", new_user_session_path, class: "header_but"  %></li>
  </ul>
<% end %>
